pipeline{
    agent{
        label "physical"
    }
    environment{
        // API_ROOT set on build
    }
    stages{
        stage('Checkout'){
            steps{
                checkout scm
            }
        }

        stage('Build'){
            steps{
                dir('frontend'){
                    script{
                        sh 'npm install'
                        sh 'echo "VITE_API_ROOT=${API_ROOT} > .env.production'
                        sh 'npx vite build'
                    }
                }
            }
        }

        // Assuming swa npm package is installed globally
        stage('Deploy'){
            steps{
                dir('frontend'){
                    script{
                        sh 'npx swa deploy --env production'
                    }
                }
            }
        }
    }
}